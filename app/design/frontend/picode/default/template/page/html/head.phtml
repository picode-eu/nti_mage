    <?php
        $_provider = $this->getLayout()->createBlock('conturifurnizori/conturi_furnizori')->getLoadedProviderDetails();
        $_providerHelper = $this->helper('conturifurnizori');
    ?>
    <?php if ($_provider): ?>
        <meta property="og:url" content="<?php echo trim($this->getBaseUrl() . 'conturifurnizori/furnizori/profil/' . $_providerHelper->seoFriendlyUrl($_provider->getBusinessDescriptionsTitle()) . '/' . $_provider->getId()); ?>" />
