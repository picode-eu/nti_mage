    <meta property="og:url" content="<?php echo trim($this->getBaseUrl() . $_product->getUrlPath()); ?>" />
    <meta property="og:title" content="<?php echo trim($_product->getName()); ?>" />
    <meta property="og:description" content="<?php echo trim($_product->getDescription()) ?>" />
    <meta property="og:image" content="<?php echo $this->helper('catalog/image')->init($_product, 'image'); ?>" />
