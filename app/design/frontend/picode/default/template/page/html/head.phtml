        <meta property="og:description" content="<?php echo trim($_provider->getBusinessDescriptionsDesc()) ?>" />
        <?php $img = $_provider->getBusinessImagesLogo() ? $_providerHelper->resizeImage($_provider->getBusinessImagesLogo(), '300', false, true) : Mage::helper('catalog/image')->init(Mage::getModel('catalog/product'), 'image')->resize(300); ?>
        <meta property="og:image" content="<?php echo $img; ?>" />
        <meta property="og:site_name" content="NuntaInImagini.ro" />
        <meta property="og:type" content="product" />
    <?php endif; ?>
